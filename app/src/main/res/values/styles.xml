<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextInputLayoutOutLinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">@dimen/radiusbutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="elevation">@dimen/medium_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>
<style name="text_view_style">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">@dimen/text_view_size</item>
    <item name="android:layout_marginStart">@dimen/small_margin</item>
</style>
    <style name="header_text_view">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="item_text_view">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>
    <style name="button_style">
        <item name="android:backgroundTint">@color/darkpurple</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
       <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

</resources>